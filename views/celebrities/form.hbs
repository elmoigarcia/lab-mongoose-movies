{{#if celebrity.isNew }}
  <form action="/celebrities/create" method="post">
  <h1>New Celebrity</h1>
{{else}}
  <form action="/celebrities/{{celebrity.id}}/edit" method="post">
  <h1>Edit Celebrity</h1>
{{/if}}

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{celebrity.name}}">
  </div>

  <div class="form-group">
    <label for="occupation">Occupation</label>
    <input type="text" class="form-control" id="occupation" name="occupation" value="{{celebrity.occupation}}">
  </div>

  <div class="form-group">
    <label for="catchPhrase">Phrase</label>
    <textarea class="form-control" name="catchPhrase" rows=3>{{celebrity.catchPhrase}}</textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>